@*@model List<Category>*@


@* BU Partial View Kullanılmıyor!!! *@
<div class="col-lg-12">
    <div class="sidebar-item categories">
        <div class="sidebar-heading">
            <h2>Categories</h2>
        </div>
        <div class="content">
            <ul>
                @foreach (Category item in ViewBag.Categories)
                {
                    <li><a asp-controller="Home" asp-action="PostByCategoryID" asp-route-id="@item.ID" >- @item.CategoryName</a></li>
                }
            </ul>
        </div>
    </div>
</div>